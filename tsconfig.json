{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@browser-mcp/contracts": ["./contracts/src"],
      "@browser-mcp/contracts/*": ["./contracts/src/*"],
      "@browser-mcp/core": ["./core/src"],
      "@browser-mcp/infrastructure": ["./infrastructure/src"],
      "@browser-mcp/mcp-server": ["./mcp-server/src"]
    },
    "types": ["node"]
  },
  "include": ["contracts/**/*", "core/**/*", "infrastructure/**/*", "mcp-server/**/*", "extension-chromium/**/*", "test-harnesses/**/*"],
  "exclude": ["node_modules", "dist", "**/dist"]
}
